{
  "name": "@hono/valibot-validator",
  "version": "0.2.5",
  "description": "Validator middleware using Valibot",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "build:cjs": "tsc -p tsconfig.cjs.json",
