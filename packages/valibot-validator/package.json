    "prerelease": "bun run build && bun run test",
    "release": "bun run publish"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/honojs/middleware.git"
  },
  "homepage": "https://github.com/honojs/middleware",
  "peerDependencies": {
    "hono": ">=3.9.0",
    "valibot": ">=0.13.1 <1"
  },
  "devDependencies": {
    "hono": "^4.0.10",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "valibot": "^0.24.1"
  }
}
