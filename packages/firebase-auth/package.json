{
  "name": "@hono/firebase-auth",
  "version": "1.4.1",
  "description": "A third-party firebase auth middleware for Hono",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start-firebase-emulator": "firebase emulators:start --project example-project12345",
    "test-with-emulator": "firebase emulators:exec --project example-project12345 'vitest run'",
    "test": "vitest run",
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "publint": "publint",
    "prerelease": "yarn build && arn publint",
    "release": "yarn publish"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/honojs/middleware.git"
  },
  "homepage": "https://github.com/honojs/middleware",
  "author": "codehex",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "firebase-auth-cloudflare-workers": "^2.0.2"
  },
  "peerDependencies": {
    "hono": "*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240222.0",
    "firebase-tools": "^13.3.1",
    "hono": "^4.2.4",
    "miniflare": "^3.20240208.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.5.0"
  }
}
