{
  "name": "hono-middleware",
  "version": "0.0.0",
  "description": "Third-party middleware for Hono",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:hello": "bun run --filter @hono/hello build",
    "build:zod-validator": "bun run --filter @hono/zod-validator build",
    "build:class-validator": "bun run --filter @hono/class-validator build",
    "build:arktype-validator": "bun run --filter @hono/arktype-validator build",
    "build:qwik-city": "bun run --filter @hono/qwik-city build",
    "build:graphql-server": "bun run --filter @hono/graphql-server build",
    "build:sentry": "bun run --filter @hono/sentry build",
    "build:firebase-auth": "bun run --filter @hono/firebase-auth build",
    "build:trpc-server": "bun run --filter @hono/trpc-server build",
    "build:clerk-auth": "bun run --filter @hono/clerk-auth build",
    "build:typebox-validator": "bun run --filter @hono/typebox-validator build",
    "build:medley-router": "bun run --filter @hono/medley-router build",
    "build:valibot-validator": "bun run --filter @hono/valibot-validator build",
    "build:zod-openapi": "bun run --filter @hono/zod-openapi install && bun run --filter @hono/zod-openapi build",
    "build:typia-validator": "bun run --filter @hono/typia-validator build",
    "build:swagger-ui": "bun run --filter @hono/swagger-ui build",
    "build:swagger-editor": "bun run --filter @hono/swagger-editor build",
    "build:esbuild-transpiler": "bun run --filter @hono/esbuild-transpiler build",
    "build:event-emitter": "bun run --filter @hono/event-emitter build",
    "build:oauth-providers": "bun run --filter @hono/oauth-providers build",
    "build:react-renderer": "bun run --filter @hono/react-renderer build",
    "build:auth-js": "bun run --filter @hono/auth-js build",
    "build:bun-transpiler": "bun run --filter @hono/bun-transpiler build",
    "build:prometheus": "bun run --filter @hono/prometheus build",
    "build:oidc-auth": "bun run --filter @hono/oidc-auth build",
    "build:node-ws": "bun run --filter @hono/node-ws build",
    "build:react-compat": "bun run --filter @hono/react-compat build",
    "build:effect-validator": "bun run --filter @hono/effect-validator build",
    "build:conform-validator": "bun run --filter @hono/conform-validator build",
    "build:casbin": "bun run --filter @hono/casbin build",
    "build:ajv-validator": "bun run --filter @hono/ajv-validator build",
    "build:tsyringe": "bun run --filter @hono/tsyringe build",
    "build:cloudflare-access": "bun run --filter @hono/cloudflare-access build",
    "build:standard-validator": "bun run --filter @hono/standard-validator build",
    "build:otel": "bun run --filter @hono/otel build",
    "build": "bun run --filter './packages' build",
    "test": "vitest",
    "lint": "eslint 'packages/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix 'packages/**/*.{ts,tsx}'",
    "format": "prettier --check 'packages/**/*.{ts,tsx}'",
    "format:fix": "prettier --write 'packages/**/*.{ts,tsx}'"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/honojs/middleware.git"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@cloudflare/vitest-pool-workers": "^0.7.8",
    "@cloudflare/workers-types": "^4.20230307.0",
    "@ryoppippi/unplugin-typia": "^1.2.0",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/coverage-istanbul": "^3.0.8",
    "eslint": "^9.17.0",
    "npm-run-all2": "^6.2.2",
    "prettier": "^2.7.1",
    "typescript": "^5.2.2",
    "vitest": "^3.0.8"
  }
}