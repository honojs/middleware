{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "outputs": [".cache/.eslintcache"]
    },
    "publint": {
      "dependsOn": ["^publint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "version:jsr": {
      "dependsOn": ["^version:jsr"],
      "outputs": ["deno.json"]
    }
  }
}
