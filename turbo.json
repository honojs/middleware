{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": [".cache/.eslintcache", "eslint-suppressions.json"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "version:jsr": {
      "dependsOn": ["^version:jsr"],
      "outputs": ["deno.json"]
    }
  }
}
